    <title>Admin Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

    <!-- bootstrap switch button -->
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/css/bootstrap-switch-button.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/dist/bootstrap-switch-button.min.js"></script>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%-include('.././layout/adminsidebar.ejs')%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">


                    <div class="topbar-divider d-none d-sm-block"></div>

                    <!-- Nav Item - User Information -->
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Ananya</span>
                            <img class="img-profile rounded-circle"
                                src="img/female.png">
                        </a>
                        
                    </li>

                </ul>

            </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid"> 

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>

                    <!-- Content Row -->
                   <div style="text-align: center; font-family: Georgia, 'Times New Roman', Times, serif; font-weight: bold; padding-bottom: 25px; color: rgb(74, 141, 153); font-size: 30px;">
                    SAMPLE-POST DISPLAY
                    </div>
                        
                    <div class="container">
                        <table class="table table-bordered">
                            <thead style="color: rgb(165, 67, 165); font-family: Georgia, 'Times New Roman', Times, serif;">
                              <tr style="text-align: center; border: 2px solid rgb(135, 190, 241);">
                                <th style="border: 2px solid rgb(135, 190, 241);">Post-Title</th>
                                <th style="border: 2px solid rgb(135, 190, 241);">Post-Details</th>
                                <th style="border: 2px solid rgb(135, 190, 241);">Image</th>
                                <th style="border: 2px solid rgb(135, 190, 241);" colspan="2">Action</th>
                              </tr>
                            </thead>
                            <% if(displayData.length > 0) {%>
                            <tbody>
                                <% for(let data of displayData){ %>
                              <tr style="border: 2px solid rgb(135, 190, 241);">
                                <td style="color: rgb(35, 85, 224); border: 2px solid rgb(135, 190, 241); font-size: 17px;"><%- data.title %></td>
                                <td style="border: 2px solid rgb(135, 190, 241); font-size: 15px;"><p><%- data.post %></p></td>
                                <td style="border: 2px solid rgb(135, 190, 241); font-size: 15px;">
                                 <img src="<%= data.image%>" alt="image" width="70px" height="60px">
                                </td>
                                <td>
                                    <input type="checkbox"  data-toggle="switchbutton" name="allow"
                                    checked data-onlabel="Allow" data-offlabel="Not Allow" 
                                    data-offstyle="light" onchange="changeStatus('<%=data.status%>', '<%=data._id%>')" <%= data.status ? 'checked' : '' %> data-onstyle="info"  >
                                  <!-- <%= data.status ? 'checked' : '' %> > --> 
                                </td>
                                <td style="border: 2px solid rgb(135, 190, 241);"><a href="/deleteadminpost/<%- data._id %>" class="btn btn-danger">Delete</a</td>
                              </tr>
                            </tbody>
                            <%}}else{%>
                                <h1>no data found</h1>
                            <% } %>
                          </table>
                    </div>

                </div>
                 <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <!-- <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
